---
import EducationItem from "./EducationItem.astro";

const EDUCATION = [
    {
        degree: "Grado en Ingeniería Telemática",
        institution: "Universidad de Alcalá",
        period: "2019 - 2023",
        description:
            "Formación integral en redes, sistemas distribuidos, programación y telecomunicaciones.",
        gpa: "8.6/10 - Premio Extraordinario",
        achievements: [
            "Thesis (10-MH): “Migration to Rust language of the Instrument Control Unit (ICU) start-up software of the Energetic Particle Detector (EPD) instrument of the Solar Orbiter mission”.",
            "14 matrículas de honor, destacando: Programación Avanzada, Sistemas Operativos y Ciberseguridad",
        ],
    },
    {
        degree: "Máster en Desarrollo de Software",
        institution: "Universidad de Alcalá",
        period: "2023 - 2024",
        description:
            "Especialización en metodologías ágiles, desarrollo web moderno y arquitecturas escalables.",
        gpa: "9.2/10 - Premio Extraordinario",
        achievements: [
            "Thesis (10-MH): “Implications of Generative Artificial Intelligence in the Human Resources selection process”.",
            "4 matriculas de honor, destacando: Backend y Microservicios y CI/CD ",
        ],
    },
];
---

<!-- TODO: adjust the list -->
<ol class="items-center sm:flex w-full">
    {
        EDUCATION.map((education, index) => (
            <li class="w-full">
                <EducationItem {...education} />
            </li>
        ))
    }
</ol>

<style>
    @keyframes fade-in-up {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in-up {
        animation: fade-in-up 0.6s ease-out;
    }
</style>
